:root {
    --primary: #2c3e50;
    --secondary: #3498db;
    --success: #2ecc71;
    --warning: #f39c12;
    --danger: #e74c3c;
    --light-bg: #f8f9fa;
    --card-shadow: 0 4px 20px rgba(44, 62, 80, 0.12);
    --transition: all 0.3s ease;
}

* {
    box-sizing: border-box;
}

body {
    font-family: 'Roboto', sans-serif;
    background-color: #f5f7fa;
    color: #333;
    overflow-x: hidden;
    font-size: 14px;
    zoom: 1; /* Ensure normal zoom level */
}

/* Sidebar Styles */
.sidebar {
    width: 280px;
    background: linear-gradient(180deg, var(--primary) 0%, #1a2530 100%);
    color: white;
    height: 100vh;
    position: fixed;
    z-index: 1000;
    box-shadow: 3px 0 10px rgba(0, 0, 0, 0.08);
    transition: var(--transition);
}

.sidebar-header {
    padding: 24px 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.logo {
    font-size: 18px;
    font-weight: 700;
    display: flex;
    align-items: center;
    gap: 8px;
}

.logo-icon {
    background: var(--secondary);
    width: 36px;
    height: 36px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-link {
    color: rgba(255, 255, 255, 0.75);
    padding: 14px 20px;
    border-radius: 8px;
    margin: 6px 0;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 400;
}

    .nav-link:hover {
        background: rgba(255, 255, 255, 0.1);
        color: white;
    }

    .nav-link.active {
        background: rgba(255, 255, 255, 0.15);
        color: white;
        font-weight: 500;
    }

    .nav-link i {
        font-size: 1.2rem;
        width: 24px;
        text-align: center;
    }

/* Main Content */
.main-content {
    margin-left: 280px;
    min-height: 100vh;
    padding: 24px;
    transition: var(--transition);
}

.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    flex-wrap: wrap;
    gap: 16px;
}

.page-title {
    font-size: 28px;
    font-weight: 700;
    color: var(--primary);
    display: flex;
    align-items: center;
    gap: 12px;
}

    .page-title i {
        color: var(--secondary);
    }

.user-profile {
    display: flex;
    align-items: center;
    gap: 12px;
    background: white;
    padding: 8px 16px;
    border-radius: 50px;
    box-shadow: var(--card-shadow);
    cursor: pointer;
}

.user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
}

/* Dashboard Cards */
.dashboard-cards {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 24px;
    margin-bottom: 32px;
}

/* Modal Dashboard Cards - Ensures they fit in one row */
#bookingModal .dashboard-cards {
    display: flex !important;
    flex-direction: row !important;
    gap: 8px;
    margin-bottom: 15px;
    width: 100%;
    min-width: 0;
    flex-wrap: nowrap !important;
}

/* Override Bootstrap grid behavior for modal dashboard cards */
#bookingModal .dashboard-cards .card {
    width: calc(33.333% - 6px) !important;
    flex-basis: calc(33.333% - 6px) !important;
    flex-grow: 0 !important;
    flex-shrink: 0 !important;
    max-width: calc(33.333% - 6px) !important;
    border-radius: 8px;
    margin: 0;
    box-shadow: 0 2px 6px rgba(44, 62, 80, 0.1);
    min-height: 90px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    min-width: 0;
}

#bookingModal .card-header {
    padding: 8px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-bottom: none;
    flex-shrink: 0;
}

#bookingModal .card-title {
    font-size: 12px;
    gap: 4px;
    margin-bottom: 0;
    display: flex;
    align-items: center;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

#bookingModal .card-title i {
    font-size: 12px;
}

#bookingModal .card-body {
    padding: 8px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    flex: 1;
}

#bookingModal .stat-value {
    font-size: 18px;
    margin: 4px 0;
    line-height: 1.1;
    text-align: center;
    font-weight: 700;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

#bookingModal .stat-desc {
    font-size: 10px;
    gap: 2px;
    text-align: center;
    flex-shrink: 0;
}

/* Modal Metrics Grid - Ensures they fit in one row */
#bookingModal .metrics-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    margin-bottom: 20px;
    width: 100%;
}

#bookingModal .metric-card {
    background: #f8fafd;
    border-radius: 12px;
    padding: 15px;
    border-left: 4px solid var(--secondary);
    box-shadow: 0 2px 6px rgba(44, 62, 80, 0.1);
    margin: 0;
}

#bookingModal .metric-title {
    font-size: 13px;
    color: #6c757d;
    margin-bottom: 6px;
}

#bookingModal .metric-value {
    font-size: 24px;
    font-weight: 700;
    color: var(--primary);
    margin: 5px 0;
}

#bookingModal .metric-change {
    font-size: 12px;
    display: flex;
    align-items: center;
    gap: 4px;
    margin-top: 5px;
}

#bookingModal .metric-change.positive {
    color: var(--success);
}

#bookingModal .metric-change.negative {
    color: var(--danger);
}

/* Modal Calendar - Takes remaining space */
#bookingModal .calendar-container {
    margin-bottom: 15px;
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 0;
    background: white;
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(44, 62, 80, 0.1);
    overflow: hidden;
}

/* Remove the old dashboard cards CSS since we're using metric cards now */
#bookingModal .dashboard-cards,
#bookingModal .dashboard-cards .card,
#bookingModal .card-header,
#bookingModal .card-title,
#bookingModal .card-body,
#bookingModal .stat-value,
#bookingModal .stat-desc {
    /* Styles removed as we're using metric cards instead */
}

.card {
    border: none;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: var(--transition);
    background: white;
}

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(44, 62, 80, 0.15);
    }

.card-header {
    padding: 20px;
    border-bottom: none;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
}

.card-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--primary);
    display: flex;
    align-items: center;
    gap: 10px;
}

.card-body {
    padding: 20px;
}

.stat-value {
    font-size: 32px;
    font-weight: 700;
    color: var(--primary);
    margin: 12px 0;
}

.stat-desc {
    color: #6c757d;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 6px;
}

    .stat-desc.up {
        color: var(--success);
    }

    .stat-desc.down {
        color: var(--danger);
    }

/* Calendar Styles */
.calendar-container {
    background: white;
    border-radius: 16px;
    box-shadow: var(--card-shadow);
    overflow: hidden;
    margin-bottom: 32px;
}

.calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-bottom: 1px solid #e0e6ed;
}

.month-nav {
    display: flex;
    align-items: center;
    gap: 15px;
}

    .month-nav h2 {
        font-size: 22px;
        font-weight: 600;
        color: var(--primary);
        margin: 0;
    }

.calendar-controls {
    display: flex;
    gap: 12px;
}

.calendar-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 2px;
    padding: 20px;
}

.calendar-day-header {
    text-align: center;
    font-weight: 600;
    padding: 12px 0;
    color: var(--secondary);
    font-size: 14px;
}

.calendar-cell {
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    padding: 8px;
    cursor: pointer;
    position: relative;
    transition: var(--transition);
    background: var(--light-bg);
    color: #6c757d;
}

    .calendar-cell:hover {
        background: #e3e9f0;
        transform: scale(1.03);
    }

    .calendar-cell.today {
        background: #e3f2fd;
        color: var(--primary);
        font-weight: 600;
        box-shadow: 0 0 0 2px var(--secondary);
    }

    .calendar-cell.booked {
        background: #ffebee;
    }

    .calendar-cell .date-number {
        font-size: 16px;
        font-weight: 500;
    }

    .calendar-cell .booking-indicator {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        margin-top: 4px;
        background: var(--success);
    }

    .calendar-cell.booked .booking-indicator {
        background: var(--danger);
    }

/* Modal Styles */
.modal-content {
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.2);
    border: none;
    transition: var(--transition);
}

.modal-content:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
}

.modal-header {
    background: linear-gradient(135deg, var(--primary) 0%, #1a2530 100%);
    color: white;
    padding: 24px 30px;
    border: none;
}

.modal-title {
    font-size: 22px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 12px;
}

.modal-body {
    padding: 30px;
}

.modal-footer {
    padding: 20px 30px;
    border-top: none;
    display: flex;
    justify-content: end;
    gap: 12px;
}

.btn-close-white {
    filter: invert(1) grayscale(100%) brightness(200%);
}

/* Enhanced Booking Modal Styles */
#bookingModal .modal-content {
    box-shadow: var(--card-shadow);
    border-radius: 16px;
    overflow: hidden;
    transition: var(--transition);
    border: none;
    max-height: 95vh;
}

#bookingModal .modal-content:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(44, 62, 80, 0.15);
}

#bookingModal .modal-header {
    background: linear-gradient(135deg, var(--primary) 0%, #1a2530 100%);
    color: white;
    padding: 20px 25px;
    border: none;
}

#bookingModal .modal-title {
    font-size: 20px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 10px;
}

.booking-modal-body {
    padding: 25px;
    max-height: calc(95vh - 140px);
    overflow-y: auto;
}

#bookingModal .form-section {
    margin-bottom: 20px;
    padding-bottom: 15px;
    border-bottom: 1px solid #e0e6ed;
}

#bookingModal .form-section:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

#bookingModal .form-section.compact-section {
    margin-bottom: 15px;
    padding-bottom: 12px;
}

#bookingModal .section-title {
    font-size: 16px;
    font-weight: 600;
    color: var(--primary);
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 8px;
}

#bookingModal .form-label {
    font-weight: 500;
    color: var(--primary);
    margin-bottom: 6px;
    display: block;
    font-size: 14px;
}

#bookingModal .form-control, .form-select {
    border: 1px solid #d0d7e2;
    border-radius: 8px;
    padding: 10px 12px;
    font-size: 14px;
    transition: var(--transition);
    box-shadow: none;
}

#bookingModal .form-control-sm, .form-select-sm {
    padding: 8px 10px;
    font-size: 13px;
    border-radius: 6px;
}

#bookingModal .form-control:focus, .form-select:focus {
    border-color: var(--secondary);
    box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
}

#bookingModal .form-control[readonly] {
    background-color: #f8f9fa;
}

#bookingModal .input-group {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

#bookingModal .input-group-text {
    background: var(--light-bg);
    border: none;
    border-radius: 8px 0 0 8px;
    padding: 0 12px;
    font-size: 13px;
}

#bookingModal .map-pin-btn {
    background: white;
    border: 1px solid #d0d7e2;
    border-radius: 8px;
    padding: 8px 12px;
    display: flex;
    align-items: center;
    gap: 6px;
    font-weight: 500;
    transition: var(--transition);
    font-size: 13px;
}

#bookingModal .map-pin-btn:hover {
    background: #f0f5ff;
    color: var(--secondary);
    border-color: var(--secondary);
}

#bookingModal .map-pin-btn.btn-sm {
    padding: 6px 10px;
    font-size: 12px;
    border-radius: 6px;
}

#bookingModal .cost-item {
    display: flex;
    gap: 12px;
    margin-bottom: 12px;
    align-items: center;
}

#bookingModal .cost-item:last-child {
    margin-bottom: 0;
}

#bookingModal .remove-cost {
    color: var(--danger);
    background: #fff0f0;
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: var(--transition);
    font-size: 12px;
}

#bookingModal .remove-cost:hover {
    background: #ffebee;
    transform: scale(1.1);
}

#bookingModal .remove-cost.btn-sm {
    width: 28px;
    height: 28px;
    border-radius: 6px;
}

#bookingModal .modal-footer {
    padding: 15px 25px;
    border-top: none;
    display: flex;
    justify-content: end;
    gap: 10px;
}

#bookingModal .btn {
    padding: 10px 24px;
    border-radius: 8px;
    font-weight: 500;
    font-size: 14px;
    transition: var(--transition);
}

#bookingModal .btn-sm {
    padding: 8px 16px;
    font-size: 13px;
    border-radius: 6px;
}

#bookingModal .btn-primary {
    background: var(--secondary);
    border: none;
    box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
}

#bookingModal .btn-primary:hover {
    background: #2980b9;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
}

#bookingModal .btn-outline-secondary {
    border-radius: 8px;
    border: 1px solid #d0d7e2;
    color: var(--primary);
    font-size: 14px;
}

#bookingModal .btn-outline-secondary:hover {
    background: #f0f5ff;
    border-color: var(--secondary);
    color: var(--secondary);
}

#bookingModal .btn-outline-secondary.btn-sm {
    font-size: 13px;
    border-radius: 6px;
}

#bookingModal .distance-box {
    background: #f0f7ff;
    border: 1px dashed var(--secondary);
    border-radius: 8px;
    padding: 12px;
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    color: var(--primary);
    margin-top: 6px;
}

/* Analytics Dashboard Specific Styles */
.analytics-container {
    background: white;
    border-radius: 16px;
    box-shadow: var(--card-shadow);
    padding: 24px;
    margin-bottom: 32px;
}

.chart-container {
    position: relative;
    height: 300px;
    width: 100%;
    margin-bottom: 30px;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    padding-bottom: 12px;
    border-bottom: 1px solid #e0e6ed;
}

.chart-title {
    font-size: 18px;
    font-weight: 600;
    color: var(--primary);
}

.chart-filters {
    display: flex;
    gap: 10px;
}

    .chart-filters .btn {
        padding: 6px 12px;
        font-size: 14px;
        border-radius: 8px;
    }

        .chart-filters .btn.active {
            background: var(--secondary);
            color: white;
            border: none;
        }

.metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.metric-card {
    background: #f8fafd;
    border-radius: 12px;
    padding: 20px;
    border-left: 4px solid var(--secondary);
}

.metric-title {
    font-size: 14px;
    color: #6c757d;
    margin-bottom: 8px;
}

.metric-value {
    font-size: 28px;
    font-weight: 700;
    color: var(--primary);
}

.metric-change {
    font-size: 13px;
    display: flex;
    align-items: center;
    gap: 5px;
    margin-top: 8px;
}

    .metric-change.positive {
        color: var(--success);
    }

    .metric-change.negative {
        color: var(--danger);
    }

.dual-chart-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 30px;
}

@media (max-width: 992px) {
    .dual-chart-container {
        grid-template-columns: 1fr;
    }
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

    .data-table th {
        background: #f0f5ff;
        padding: 12px 15px;
        text-align: left;
        font-weight: 600;
        color: var(--primary);
        border-bottom: 2px solid #e0e6ed;
    }

    .data-table td {
        padding: 12px 15px;
        border-bottom: 1px solid #e0e6ed;
    }

    .data-table tr:hover {
        background: #f8f9fa;
    }

.trend-up {
    color: var(--success);
}

.trend-down {
    color: var(--danger);
}

/* View Toggle */
.view-toggle {
    display: flex;
    background: #e9ecef;
    border-radius: 10px;
    overflow: hidden;
    width: fit-content;
    margin-bottom: 24px;
}

.view-btn {
    padding: 10px 20px;
    border: none;
    background: transparent;
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition);
}

    .view-btn.active {
        background: white;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        color: var(--primary);
        font-weight: 600;
    }

    .view-btn:first-child {
        border-radius: 10px 0 0 10px;
    }

    .view-btn:last-child {
        border-radius: 0 10px 10px 0;
    }

/* Content Views */
.content-view {
    display: none;
}

    .content-view.active {
        display: block;
    }

/* Responsive Adjustments */
@media (max-width: 992px) {
    .sidebar {
        width: 100px;
    }

        .sidebar .logo-text,
        .sidebar .nav-text {
            display: none;
        }

        .sidebar .nav-link {
            justify-content: center;
            padding: 16px 0;
        }

    .nav-link i {
        font-size: 1.5rem;
    }

    .main-content {
        margin-left: 100px;
    }

    .dashboard-cards {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    }
}

@media (max-width: 768px) {
    .sidebar {
        width: 70px;
    }

    .main-content {
        margin-left: 70px;
        padding: 16px;
    }

    .header {
        flex-direction: column;
        align-items: flex-start;
    }

    .user-profile {
        width: 100%;
        justify-content: flex-end;
    }

    .calendar-grid {
        grid-template-columns: repeat(7, 1fr);
        gap: 1px;
    }

    .calendar-cell {
        padding: 6px;
    }
}

@media (max-width: 576px) {
    .sidebar {
        transform: translateX(-100%);
    }

        .sidebar.show {
            transform: translateX(0);
        }

    .main-content {
        margin-left: 0;
    }

    .mobile-toggle {
        display: block;
    }

    .dashboard-cards {
        grid-template-columns: 1fr;
    }

    .dual-chart-container {
        grid-template-columns: 1fr;
    }
}

.mobile-toggle {
    display: none;
    background: var(--primary);
    color: white;
    border: none;
    width: 40px;
    height: 40px;
    border-radius: 10px;
    margin-right: 16px;
}

.no-data {
    text-align: center;
    padding: 40px 20px;
    color: #6c757d;
}

    .no-data i {
        font-size: 48px;
        margin-bottom: 16px;
        color: #e0e6ed;
    }

.signature-card {
    border-radius: 16px;
    box-shadow: var(--card-shadow);
    border: none;
    transition: var(--transition);
}

.signature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(44, 62, 80, 0.15);
}

.signature-card .card-header {
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-bottom: 1px solid #e0e6ed;
    padding: 20px;
}

.signature-card .card-body {
    padding: 20px;
}

/* E-Signature Modal Styles */
#eSignatureModal .form-control {
    border: 1px solid #d0d7e2;
    border-radius: 10px;
    padding: 12px 16px;
    font-size: 16px;
    transition: var(--transition);
    box-shadow: none;
}

#eSignatureModal .form-control:focus {
    border-color: var(--secondary);
    box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
}

#eSignatureModal .form-control[readonly] {
    background-color: #f8f9fa;
}

/* Ensure DR Number is displayed with black text and bold font */
#ePodDrNumber {
    color: #000000 !important;
    font-weight: bold !important;
}

/* EPOD Card Styles - Make DR Number black for better readability */
#ePodCardsContainer .card-header.bg-primary h6 {
    color: #000000 !important;
    font-weight: bold;
}

/* In Development Tag Animation */
.coming-soon-tag {
    font-size: 0.9rem;
    font-weight: 600;
    color: #ffc107;
    animation: pulseYellow 2s infinite;
    display: inline-block;
    margin-bottom: 5px;
}

